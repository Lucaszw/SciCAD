{
  "name": "microdrop-3.0",
  "bin": {
    "microdrop-3.0": "bin/microdrop-3.0"
  },
  "version": "3.0.25",
  "description": "Microdrop with MQTT subport and Web UI",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-all": "./node_modules/.bin/npm-recursive-install .",
    "build-all-unix": "find ./packages -mindepth 1 -maxdepth 1 -type d -exec npm --prefix {} run-script build ;",
    "build-all-windows": "@powershell -NoProfile -ExecutionPolicy unrestricted -Command \" Get-ChildItem .\\packages\\* | Foreach { npm --prefix $_.fullname run-script build } \" "
  },
  "pkg": {
    "assets": [
      "mqtt-admin/*",
      "web-ui/**/*",
      "find-microdrop-plugins.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lucaszw/microdrop-3.0.git"
  },
  "keywords": [
    "Microdrop",
    "Web UI"
  ],
  "author": "Lucas Zeer",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/Lucaszw/microdrop-3.0/issues"
  },
  "homepage": "https://github.com/Lucaszw/microdrop-3.0#readme",
  "dependencies": {
    "@microdrop/async": "0.0.20",
    "@mqttclient/node": "0.0.15",
    "argparse": "^1.0.9",
    "backbone": "^1.3.3",
    "crossroads": "^0.12.2",
    "express": "^4.16.2",
    "handlebars": "^4.0.11",
    "level": "<=1.7.0",
    "lodash": "^4.17.4",
    "mosca": "^2.6.0",
    "mqtt": "^2.13.1",
    "mqtt-router": "^0.5.0",
    "pandas-helpers": "^1.0.0",
    "three": "^0.88.0",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "recursive-install": "^1.3.0"
  }
}
